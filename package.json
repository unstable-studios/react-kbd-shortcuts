{
  "name": "react-kbd-shortcuts-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter \"react-kbd-shortcuts\" --filter \"react-kbd-shortcuts-sandbox\" run dev",
    "dev:lib": "pnpm --filter react-kbd-shortcuts build:watch",
    "dev:sandbox": "pnpm --filter react-kbd-shortcuts-sandbox dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "clean": "git clean -xfd && git reset --hard",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish",
    "release": "pnpm changeset:version && pnpm changeset:publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "tailwindcss": "^4.1.16"
  }
}
